package Main;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import javax.swing.*;
import java.awt.*;

class OurGUI extends JFrame{
	
	private OurButton button1;
	private JPanel panel;
	private JLabel title;
	private OurChoices option1, option2, option3, option4, enterChoice;
	private JTextField pick;
	
	public OurGUI() 
	{
		
		setSize(900, 600);
		setTitle("Library Book Borrowing Tracker");
		setLocationRelativeTo(null);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		panel = new JPanel();
		panel.setLayout(null);
		
		title = new JLabel("LIBRARY BOOK BORROWING TRACKER");
		title.setFont(new Font("Times New Roman", Font.BOLD, 24));
		title.setBounds(220, 10, 900, 100);
		title.setForeground(Color.BLACK);
		
		panel.add(title);
		
		option1 = new OurChoices("1. BORROW A BOOK", 25, 100);
		option2 = new OurChoices("2. RETURN A BOOK", 25, 150);
		option3 = new OurChoices("3. VIEW RETURN AND BORROWED BOOKS", 25, 200);
		option4 = new OurChoices("4. EXIT", 25, 250);
		enterChoice = new OurChoices("ENTER CHOICE: ", 25, 300);
		pick = new JTextField();
		pick.setBounds(177, 335, 100, 30);
		
		button1 = new OurButton("Submit");
		
		panel.add(option1);
		panel.add(option2);
		panel.add(option3);
		panel.add(option4);
		panel.add(enterChoice);
		panel.add(pick);
		panel.add(button1);
		add(panel);
		setVisible(true);

	}
	
}

class OurChoices extends JLabel{
	
	public OurChoices(String text, int x, int y) {
		
		super(text);
		
		setBounds(x, y, 500, 100);
		setFont(new Font("Times New Roman", Font.BOLD, 18));
		setForeground(Color.BLACK);
				
	}
}

class OurButton extends JButton implements ActionListener{

	private BookBorrow bookBorrow;
	
	public OurButton(String text) {
		
		super(text);
		
		setBounds(300,335,100, 30);
		
		addActionListener(this);
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		
		new BookBorrow();
}

class BookBorrow extends JFrame {

	private JPanel panel;
	private JLabel title;
	
	public BookBorrow() {
		
		setSize(900, 600);
		setTitle("1. Borrow a book");
		setLocationRelativeTo(null);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		panel = new JPanel();
		panel.setLayout(null);
		
		title = new JLabel("BORROW A BOOK");
		title.setFont(new Font("Times New Roman", Font.BOLD, 24));
		title.setBounds(350, 10, 900, 100);
		title.setForeground(Color.BLACK);
		
		panel.add(title);
		add(panel);
		setVisible(true);
		
	}
	
  }

}
